  <script>
    // Function to read URL parameters
    function getParam(key) {
      return new URLSearchParams(window.location.search).get(key) || "N/A";
    }

    // Populate details
    const bID = getParam("building");
    const owner = getParam("owner");
    const use = getParam("use");
    const total = getParam("totalTax");
    const status = getParam("status");

    document.getElementById("bID").textContent = bID;
    document.getElementById("owner").textContent = owner;
    document.getElementById("useType").textContent = use;
    document.getElementById("status").textContent = status;
    document.getElementById("totalTax").textContent = "‚Çπ" + total;

    // üí≥ Payment redirect (replace this link with your payment gateway or form)
    const paymentUrl = "https://rzp.io/l/demoPayment?building=" + encodeURIComponent(bID) +
                       "&amount=" + encodeURIComponent(total);
    document.getElementById("payLink").href = paymentUrl;
  </script>
